# ========================================
# CONFIGURACIÓN DE SQL SERVER (ORIGEN)
# ========================================
SA_PASSWORD=TU_PASSWORD_SQLSERVER_AQUI
SQL_HOST=localhost
SQL_PORT=1433
DB_NAME=SIBNE_ETL
BACKUP_FILE_NAME=tu_backup.bak
MSSQL_COLLATION=SQL_Latin1_General_CP1_CI_AS

# ========================================
# CONFIGURACIÓN DE POSTGRESQL (DESTINO - EXTERNO)
# ========================================
# NOTA: PostgreSQL se administra desde el proyecto backend
# Configura estos valores según tu entorno PostgreSQL externo
PG_USER=postgres
PG_PASSWORD=TU_PASSWORD_POSTGRESQL_AQUI
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=sibne_backend_db

# Tamaño de lote para inserción (filas procesadas por bloque)
BATCH_SIZE=1000

# Número de tablas a procesar en paralelo
CONCURRENCY=3

# Exportar también a CSV (true/false)
CSV_EXPORT=true

# Validar datos durante migración (true/false)
VALIDATE_DATA=true

# Intentos de reintento en caso de error
RETRY_ATTEMPTS=3

# Delay entre reintentos (millisegundos)
RETRY_DELAY=5000

# ========================================
# CONFIGURACIÓN DE RUTAS
# ========================================
CSV_OUTPUT_PATH=./Tablas
LOGS_PATH=./logs
TEMP_PATH=./temp

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
# Configuración de Desarrollo
# =====================================

NODE_ENV=development
DEBUG=etl:*