model Users {
	id                 String    @id @default(cuid())
	email              String    @unique
	password           String
	name               String?
	surname            String?
	role               UserRole  @default(USER)
	lastConnection     DateTime?
	createdAt          DateTime  @default(now())
	updatedAt          DateTime  @updatedAt
	refreshToken       String?

	@@map("users")
}

enum UserRole {
	ADMIN
	USER

	@@map("role")
}
