model Energetico {
  id                        Int      @id @default(autoincrement())
  activo                    Boolean
  codigoStr                 String
  nombre                    String
  descripcion               String
  libreDisposicion          Boolean
  densidadValor             Float?
  densidadUnidadMedidaId    Int?
  poderCalorificoValor      Float?
  poderCalorificoUMedidaId  Int?
  pedirHumedad              Boolean
  pedirPoderCalorifico      Boolean
  energeticoGrupoId         Int

  poderCalorificoUMedida    UnidadMedida?      @relation("PoderCalorificoUMedida", fields: [poderCalorificoUMedidaId], references: [id])
  densidadUMedida           UnidadMedida?      @relation("DensidadUMedida", fields: [densidadUnidadMedidaId], references: [id])
  energeticoGrupo           EnergeticoGrupos   @relation(fields: [energeticoGrupoId], references: [id])
  energeticoUnidadMedida    EnergeticoUnidadMedida[]
  transaccionesIn           Transaccion[]      @relation("EnergeticoIn")
  transaccionesOut          Transaccion[]      @relation("EnergeticoOut")
  transaccionesRegionDest   Transaccion[]      @relation("TransaccionRegionDest")

  @@map("Energetico")
}